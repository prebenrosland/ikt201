@model Entry

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

<form asp-action="Index" method="post">
    <label asp-for="Name"></label>
    <input asp-for="Name" id="Name" required="required">
    <label asp-for="Title"></label>
    <input asp-for="Title" id="Title" minlength="5" maxlength="50" required="required">
    <label asp-for="Message"></label>
    <textarea asp-for="Message" id="Message" type="text" minlength="20" maxlength="200" required="required"></textarea>
    <input id="Submit" type="submit" value="Submit">
</form>