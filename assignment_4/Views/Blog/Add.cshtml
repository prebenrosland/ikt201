@model BlogPost

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>
<form asp-action="Add" method="post">
    <input type="hidden" asp-for="Author" />
    <label asp-for="Title"></label>
    <input asp-for="Title" id="Title" required="required">
    <label asp-for="Content"></label>
    <textarea asp-for="Content" id="Content" type="text" minlength="20" maxlength="200" required="required"></textarea>
    <textarea asp-for="Summary" id="Summary" type="text" minlength="1" maxlength="200" required="required"></textarea>
    <input id="Submit" type="submit" value="Submit">
</form>